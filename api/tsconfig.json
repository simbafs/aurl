{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"baseUrl": "./src",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./src/types",
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]

}
